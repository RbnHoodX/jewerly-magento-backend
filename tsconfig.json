{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": [
    "src/scripts/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/cleanup-duplicates.ts",
    "src/services/googleSheetsFixed.ts"
  ]
}
